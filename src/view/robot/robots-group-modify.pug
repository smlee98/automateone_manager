extends ../../templates/base

mixin robotItems(index)
    .col
        .card
            .card-body
                .hstack.gap-2
                    .form-check
                        input.form-check-input(
                            id=`checkbox${index}`,
                            type="checkbox"
                        )
                    span= `ibizbot-${index}`

block contents
    +breadcrumb(["로봇", "로봇그룹 수정"])
    section#wrapper
        .vstack.gap-4.px-5.py-4
            .hstack.justify-content-between
                h4.fw-bold 로봇그룹 수정
                .hstack.gap-3
                    a.btn.btn-secondary(
                        href="/src/view/robot/robots-group.pug"
                    )
                        .hstack.gap-2
                            i.bi.bi-list.lh-1
                            span 목록
                    a.btn.btn-primary(href="/src/view/robot/robots-group.pug")
                        .hstack.gap-2
                            i.bi.bi-save.lh-1
                            span 저장
            .vstack.gap-2
                label.form-label.fw-bold(for="robotGroupTitle") 로봇 그룹명
                input#settingTrobotGroupTitleitle.form-control(type="text")
            .vstack.gap-2
                label.form-label.fw-bold(for="robotGroupExplain") 설명
                textarea#robotGroupExplain.form-control(rows="5")
            .card
                .card-body
                    .vstack.gap-4
                        .hstack.justify-content-between
                            h4.fw-bold 로봇
                            .hstack.gap-3
                                button.btn.btn-primary
                                    .hstack.gap-2
                                        i.bi.bi-plus-lg.lh-1
                                        span 추가
                                button.btn.btn-secondary
                                    .hstack.gap-2
                                        i.bi.bi-x-lg.lh-1
                                        span 삭제
                        .row.row-cols-2.row-cols-lg-6.g-4
                            - for (let index = 1; index <= 10; index++)
                                +robotItems(index)
