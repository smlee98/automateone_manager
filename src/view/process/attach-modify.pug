extends ../../templates/base

block contents
    +breadcrumb(["프로세스", "첨부파일 수정"])
    section#wrapper
        .vstack.gap-4.px-5.py-4
            .d-flex.justify-content-between.align-items-center
                h4.fw-bold 첨부파일 수정
                .hstack.gap-3
                    a.btn.btn-secondary(href="/src/view/process/attach.pug")
                        .hstack.gap-2
                            i.bi.bi-list.lh-1
                            span 목록
                    button.btn.btn-primary(
                        data-bs-toggle="modal",
                        data-bs-target="#saveCheckModal"
                    )
                        .hstack.gap-2
                            i.bi.bi-save.lh-1
                            span 저장
            .vstack.gap-2
                label.form-label.fw-bold(for="scriptTitle") 그룹명
                input#attachGroupName.form-control(type="text")
            .vstack.gap-2
                label.form-label.text-start.fw-bold(for="attachGroupExplain") 설명
                textarea#attachGroupExplain.form-control(rows="5")
            .hstack.justify-content-between
                legend.w-auto 파일 관리
                .hstack.gap-3
                    button.btn.btn-primary(
                        data-bs-toggle="modal",
                        data-bs-target="#newAttachFileModal"
                    )
                        .hstack.gap-2
                            i.bi.bi-plus-lg.lh-1
                            span 파일 등록
                    button.btn.btn-secondary(
                        data-bs-toggle="modal",
                        data-bs-target="#deleteCheckModal"
                    )
                        .hstack.gap-2
                            i.bi.bi-x-lg.lh-1
                            span 파일 삭제
            .table-responsive
                table#attachListTable.table.table-bordered
                    thead
                        tr
                            th
                                .form-check
                                    input#checkAll.form-check-input(
                                        type="checkbox",
                                        name="boardCheck",
                                        value="checkAll"
                                    ) 
                            th #[span 파일명]
                            th #[span 설명]
                            th #[span 등록자]
                            th #[span 등록일]
                            th #[span 저장]
                    tbody
                        tr
                            td
                                .form-check
                                    input#board3.form-check-input.board-check(
                                        type="checkbox",
                                        name="boardCheck",
                                        value="board1"
                                    )
                            td
                                a.hstack.gap-1.highlight-item(href="#")
                                    i.bi.bi-download.text-muted
                                    span 디지털마케팅팀 주보 업무.zip
                            td
                                input.form-control-plaintext.py-0(
                                    type="text",
                                    value="디지털마케팅팀 주보 업무"
                                )
                            td admin
                            td #[small.text-muted.lh-sm 2022-04-05 #[br] 14:18:45]
                            td
                                button.btn.btn-sm.btn-primary.py-0
                                    span.me-1 저장
                                    i.bi.bi-check-lg
                        tr
                            td
                                .form-check
                                    input#board2.form-check-input.board-check(
                                        type="checkbox",
                                        name="boardCheck",
                                        value="board1"
                                    )
                            td
                                a.hstack.gap-1.highlight-item(href="#")
                                    i.bi.bi-download.text-muted
                                    span 디지털마케팅팀 주보 업무.zip
                            td
                                input.form-control-plaintext.py-0(
                                    type="text",
                                    value="디지털마케팅팀 주보 업무"
                                )
                            td admin
                            td #[small.text-muted.lh-sm 2022-04-05 #[br] 14:18:45]
                            td
                                button.btn.btn-sm.btn-primary.py-0
                                    span.me-1 저장
                                    i.bi.bi-check-lg
                        tr
                            td
                                .form-check
                                    input#board1.form-check-input.board-check(
                                        type="checkbox",
                                        name="boardCheck",
                                        value="board1"
                                    )
                            td
                                a.hstack.gap-1.highlight-item(href="#")
                                    i.bi.bi-download.text-muted
                                    span 디지털마케팅팀 주보 업무.zip
                            td
                                input.form-control-plaintext.py-0(
                                    type="text",
                                    value="디지털마케팅팀 주보 업무"
                                )
                            td admin
                            td #[small.text-muted.lh-sm 2022-04-05 #[br] 14:18:45]
                            td
                                button.btn.btn-sm.btn-primary.py-0
                                    span.me-1 저장
                                    i.bi.bi-check-lg

block modal
    +saveCheckModal("/src/view/process/attach.pug")
    #newAttachFileModal.modal.fade(
        tabindex="-1",
        aria-labelledby="newAttachFileModal",
        aria-hidden="true"
    )
        .modal-dialog.modal-lg.modal-dialog-centered.modal-dialog-scrollable
            .modal-content.text-center
                .modal-body
                    .vstack.gap-3
                        .vstack.gap-2
                            label.form-label.text-start.fw-bold(
                                for="newAttachFile"
                            ) 첨부파일
                            input#newAttachFile.form-control(type="file")
                        .vstack.gap-2
                            label.form-label.text-start.fw-bold(
                                for="newAttachExplain"
                            ) 설명
                            textarea#newAttachExplain.form-control(rows="5")
                .modal-footer.justify-content-center
                    .hstack.gap-3.w-100
                        button.btn.btn-lg.btn-primary.w-100(
                            data-bs-dismiss="modal",
                            aria-label="Close"
                        ) 확인
                        button.btn.btn-lg.btn-secondary.w-100(
                            data-bs-dismiss="modal",
                            aria-label="Close"
                        ) 취소
