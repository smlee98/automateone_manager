extends ../../templates/base

block contents
    +breadcrumb(["프로세스", "첨부파일 관리"])
    section#wrapper
        .vstack.gap-4.px-5.py-4
            h4.fw-bold 첨부파일 관리
            .d-flex.justify-content-between.align-items-center
                .hstack.gap-3
                    .hstack.gap-2.border.ps-3.pe-2.py-2.rounded-pill
                        input.form-control-plaintext.form-control-sm(
                            type="text",
                            placeholder="파일 검색"
                        )
                        button.btn.btn-primary.btn-icon.rounded-circle
                            .hstack.justify-content-center
                                i.bi.bi-search.d-inline-flex
                    button#excelDownload.btn.btn-success
                        .hstack.gap-2
                            i.bi.bi-file-earmark-spreadsheet
                            span 엑셀 다운로드
                .hstack.gap-2
                    button.btn.btn-primary(
                        data-bs-toggle="modal",
                        data-bs-target="#newAttachModal"
                    )
                        .hstack.gap-2
                            i.bi.bi-plus-lg
                            span 첨부파일 등록
                    button.btn.btn-secondary(
                        data-bs-toggle="modal",
                        data-bs-target="#deleteCheckModal"
                    )
                        .hstack.gap-2
                            i.bi.bi-x-lg
                            span 첨부파일 삭제
            .table-responsive
                table#manageAttachTable.table.table-bordered.table-excel
                    thead
                        tr
                            th
                                .form-check
                                    input#checkAll.form-check-input(
                                        type="checkbox",
                                        name="boardCheck",
                                        value="checkAll"
                                    ) 
                            th #[span 번호]
                            th #[span 파일 그룹]
                            th #[span 파일 개수]
                            th #[span 등록일]
                            th #[span 수정]
                    tbody
                        tr
                            td
                                .form-check
                                    input#board1.form-check-input.board-check(
                                        type="checkbox",
                                        name="boardCheck",
                                        value="board1"
                                    )
                            td #[span 1]
                            td #[span 파일 그룹 1]
                            td #[span 2]
                            td #[small.text-muted.lh-sm 2022-04-05 #[br] 14:18:45]
                            td
                                a.btn.btn-sm.btn-secondary.py-0(
                                    href="/src/view/process/attach-modify.pug"
                                )
                                    span.me-1 수정
                                    i.bi.bi-pencil-fill
            +pagination

block modal
    #newAttachModal.modal.fade(
        tabindex="-1",
        aria-labelledby="newAttachModal",
        aria-hidden="true"
    )
        .modal-dialog.modal-lg.modal-dialog-centered.modal-dialog-scrollable
            .modal-content.text-center
                .modal-body
                    .vstack.gap-3
                        .vstack.gap-2
                            label.form-label.text-start.fw-bold(
                                for="newAttachGroupName"
                            ) 그룹명
                            input#newAttachGroupName.form-control(type="text")
                        .vstack.gap-2
                            label.form-label.text-start.fw-bold(
                                for="newAttachExplain"
                            ) 설명
                            textarea#newAttachExplain.form-control(rows="5")
                .modal-footer.justify-content-center
                    .hstack.gap-3.w-100
                        button.btn.btn-lg.btn-primary.w-100(
                            data-bs-dismiss="modal",
                            aria-label="Close"
                        ) 등록
                        button.btn.btn-lg.btn-secondary.w-100(
                            data-bs-dismiss="modal",
                            aria-label="Close"
                        ) 취소
