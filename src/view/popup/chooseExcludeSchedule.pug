extends ../../templates/empty

block contents
    section.p-4.vh-100.vw-100
        .d-flex.flex-column.w-100.h-100
            .container.h-100
                #workdayCalendar.flex-grow-1

    script(type="importmap").
        {
            "imports": {
                "@fullcalendar/core": "https://cdn.skypack.dev/@fullcalendar/core@6.0.1",
                "@fullcalendar/daygrid": "https://cdn.skypack.dev/@fullcalendar/daygrid@6.0.1"
            }
        }
    script(type="module").
        import { Calendar } from "@fullcalendar/core";
        import dayGridPlugin from "@fullcalendar/daygrid";

        document.addEventListener("DOMContentLoaded", () => {
            const calendarEl = document.getElementById("workdayCalendar");
            const calendar = new Calendar(calendarEl, {
                plugins: [dayGridPlugin],
                initialView: "dayGridMonth",
                locale: "ko",
                buttonText: {
                    today: "오늘",
                    month: "월",
                    week: "주",
                    day: "일",
                    list: "리스트",
                },
                height: "100%",
                dayMaxEventRows: true,
                events: [
                    { title: "Sample I", start: "2022-12-05", end: "2022-12-07" },
                    { title: "Sample II", start: "2022-12-05", end: "2022-12-07" },
                    { title: "Sample III", start: "2022-12-05", end: "2022-12-07" },
                    { title: "Sample IV", start: "2022-12-05", end: "2022-12-07" },
                    { title: "Sample V", start: "2022-12-05", end: "2022-12-07" },
                    { title: "Sample VI", start: "2022-12-05", end: "2022-12-07" },
                ],
            });
            calendar.render();
        });
