extends ../templates/login

block contents
    .container.h-100
        article.d-flex.justify-content-center.align-items-center.h-100
            .card
                #login-box.card-body
                    .vstack.gap-4
                        img#logo.align-self-center(
                            src="/src/assets/images/logo_login.png",
                            alt="logo"
                        )
                        .form-floating
                            input#userId.form-control(
                                type="text",
                                placeholder="아이디"
                            )
                            label(for="userId") 아이디
                        .form-floating
                            input#userPw.form-control(
                                type="text",
                                placeholder="비밀번호"
                            )
                            label(for="userId") 비밀번호
                        a.btn.btn-lg.btn-primary(href="/src/view/index.pug") 로그인
                        .d-flex.justify-content-between.align-items-center
                            .form-check
                                input#RememberId.form-check-input(
                                    type="checkbox"
                                )
                                label.form-check-label(for="RememberId") 아이디 기억하기
                            a.text-primary(href="/src/view/register.pug") 회원가입
                ul.list-group.list-group-flush.small
                    li.list-group-item.text-center
                        span 사용기간 : 2021-11-09 00:00:00 ~ 2023-12-31 23:59:59
                    li.list-group-item
                        .d-flex.justify-content-between.align-items-center
                            span 트레이너 사용수 : 50
                            span 동시로봇 연결수 : 50
                            span 동시실행 로봇수 : 50
