extends ../../../templates/project

block contents
    +breadcrumb(["프로젝트", "프로젝트 수정"], "main")
    section#wrapper
        .vstack.gap-4.px-5.py-4
            .d-flex.justify-content-between.align-items-center
                h4.fw-bold 프로젝트 수정
                .hstack.gap-3
                    a.btn.btn-secondary(
                        href="/src/view/sysMngr/project/project.pug"
                    )
                        .hstack.gap-2
                            i.bi.bi-list.lh-1
                            span 목록
                    button.btn.btn-primary(
                        data-bs-toggle="modal",
                        data-bs-target="#saveCheckModal"
                    )
                        .hstack.gap-2
                            i.bi.bi-save.lh-1
                            span 저장
            .row.g-4
                .col-12.col-lg-6
                    .vstack.gap-2
                        label.form-label.fw-bold(for="projectTitle") 프로젝트 명
                        input#projectTitle.form-control(type="text")
                .col-12.col-lg-6
                    .vstack.gap-2
                        label.form-label.fw-bold(for="projectTypeRadio") 프로젝트 유형
                        #projectTypeRadio.btn-group(role="group")
                            input#typeEtc.btn-check(
                                type="radio",
                                name="projectTypeRadio",
                                autocomplete="off",
                                checked
                            )
                            label.btn.btn-outline-primary(for="typeEtc") 기타
                            input#typeLive.btn-check(
                                type="radio",
                                name="projectTypeRadio",
                                autocomplete="off"
                            )
                            label.btn.btn-outline-primary(for="typeLive") 운영
                            input#typeDev.btn-check(
                                type="radio",
                                name="projectTypeRadio",
                                autocomplete="off"
                            )
                            label.btn.btn-outline-primary(for="typeDev") 개발
            .vstack.gap-2
                label.form-label.fw-bold(for="projectEditor") 설명
                textarea#projectExplain.form-control(rows="5")
            .row.row-cols-1.row-cols-lg-2.g-4.flex-grow-1
                .col
                    .vstack.gap-2.h-100
                        .d-flex.justify-content-between.align-items-center
                            label.form-label.fw-bold(for="projectEditor") 프로젝트 관리자
                            .hstack.gap-2
                                button.btn.btn-sm.btn-primary(
                                    data-bs-toggle="modal",
                                    data-bs-target="#projectManagerModal"
                                )
                                    .hstack.gap-2
                                        i.bi.bi-plus-lg
                                        span 관리자 추가
                                button.btn.btn-sm.btn-secondary(
                                    data-bs-toggle="modal",
                                    data-bs-target="#deleteCheckModal"
                                )
                                    .hstack.gap-2
                                        i.bi.bi-x-lg
                                        span 관리자 삭제
                        .card.mb-2.h-100
                            ul.list-group.list-group-flush
                                li.list-group-item
                                    .d-flex.justify-content-between.align-items-center
                                        .hstack.gap-2
                                            .form-check
                                                input#checkPerson1.form-check-input(
                                                    type="checkbox",
                                                    value="checkPerson1"
                                                ) 
                                            i.bi.bi-person-gear
                                            span 관리자(admin)
                                        .hstack.gap-2
                                            i.bi.bi-envelope
                                            span admin@gridone.co.kr
                                        span.text-muted 2022-11-18
                                li.list-group-item
                                    .d-flex.justify-content-between.align-items-center
                                        .hstack.gap-2
                                            .form-check
                                                input#checkPerson2.form-check-input(
                                                    type="checkbox",
                                                    value="checkPerson2"
                                                ) 
                                            i.bi.bi-person-gear
                                            span 관리자(admin)
                                        .hstack.gap-2
                                            i.bi.bi-envelope
                                            span admin@gridone.co.kr
                                        span.text-muted 2022-11-18
                                li.list-group-item
                                    .d-flex.justify-content-between.align-items-center
                                        .hstack.gap-2
                                            .form-check
                                                input#checkPerson3.form-check-input(
                                                    type="checkbox",
                                                    value="checkPerson3"
                                                ) 
                                            i.bi.bi-person-gear
                                            span 관리자(admin)
                                        .hstack.gap-2
                                            i.bi.bi-envelope
