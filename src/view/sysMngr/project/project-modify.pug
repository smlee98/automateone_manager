block modal
    +saveCheckModal("/src/view/sysMngr/project/project.pug")
    #projectManagerModal.modal.fade(
        tabindex="-1",
        aria-labelledby="projectManagerModal",
        aria-hidden="true"
    )
        .modal-dialog.modal-lg.modal-dialog-centered.modal-dialog-scrollable
            .modal-content
                .modal-header
                    h5.fw-bold 프로젝트 관리자 추가
                .modal-body
                    .vstack.gap-4
                        .table-responsive
                            table#projectManagerTable.table.table-bordered
                                thead
                                    tr
                                        th
                                            .form-check
                                                input#checkAll.form-check-input.border-1(
                                                    type="checkbox",
                                                    name="boardCheck",
                                                    value="checkAll"
                                                )
                                        th #[span 성]
                                        th #[span 이름]
                                        th #[span E-Mail]
                                tbody
                                    tr
                                        td
                                            .form-check
                                                input#manager1.form-check-input.board-check(
                                                    type="checkbox",
                                                    name="boardCheck",
                                                    value="manager1"
                                                )
                                        td #[span 관]
                                        td #[span 리자]
                                        td #[span admin@gridone.co.kr]
                        +pagination
                .modal-footer.justify-content-center
                    .hstack.gap-3.w-100
                        button.btn.btn-lg.btn-primary.w-100(
                            data-bs-dismiss="modal",
                            aria-label="Close"
                        ) 추가
                        button.btn.btn-lg.btn-secondary.w-100(
                            data-bs-dismiss="modal",
                            aria-label="Close"
                        ) 취소

    #projectRobotModal.modal.fade(
        tabindex="-1",
        aria-labelledby="projectRobotModal",
        aria-hidden="true"
    )
        .modal-dialog.modal-lg.modal-dialog-centered.modal-dialog-scrollable
            .modal-content
                .modal-header
                    h5.fw-bold 프로젝트 로봇 추가
                .modal-body
                    .vstack.gap-4
                        .table-responsive
                            table#projectRobotTable.table.table-bordered
                                thead
                                    tr
                                        th
                                            .form-check
                                                input#checkAll.form-check-input.border-1(
                                                    type="checkbox",
                                                    name="boardCheck",
                                                    value="checkAll"
                                                )
                                        th #[span ID]
                                        th #[span 로봇명]
                                        th #[span 설명]
                                tbody
                                    tr
                                        td
                                            .form-check
                                                input#robot1.form-check-input.board-check(
                                                    type="checkbox",
                                                    name="boardCheck",
                                                    value="robot1"
                                                )
                                        td #[span 120]
                                        td #[span ibizbot_120]
                                        td #[span 관리자 전용 로봇]
                        +pagination
                .modal-footer.justify-content-center
                    .hstack.gap-3.w-100
                        button.btn.btn-lg.btn-primary.w-100(
                            data-bs-dismiss="modal",
                            aria-label="Close"
                        ) 추가
                        button.btn.btn-lg.btn-secondary.w-100(
                            data-bs-dismiss="modal",
                            aria-label="Close"
                        ) 취소
