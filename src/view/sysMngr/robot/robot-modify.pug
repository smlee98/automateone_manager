extends ../../../templates/project

block contents
    +breadcrumb(["로봇 & 트레이너", "로봇 수정"], "main")
    section#wrapper
        .vstack.gap-4.px-5.py-4
            .d-flex.justify-content-between.align-items-center
                h4.fw-bold 로봇 수정
                .hstack.gap-3
                    a.btn.btn-secondary(
                        href="/src/view/sysMngr/robot/robot.pug"
                    )
                        .hstack.gap-2
                            i.bi.bi-list.lh-1
                            span 목록
                    button.btn.btn-primary(
                        data-bs-toggle="modal",
                        data-bs-target="#saveCheckModal"
                    )
                        .hstack.gap-2
                            i.bi.bi-save.lh-1
                            span 저장
            .row.g-4
                .col-12.col-lg-6
                    .vstack.gap-2
                        label.form-label.fw-bold(for="robotTitle") 프로젝트 명
                        input#robotTitle.form-control(type="text")
                .col-12.col-lg-6
                    .vstack.gap-2
                        label.form-label.fw-bold(for="robotIp") 접속 IP
                        input#robotIp.form-control(type="text")
            .vstack.gap-2
                label.form-label.fw-bold(for="robotIp") 고유 키
                input#robotKey.form-control(type="robotKey", readonly)
            .vstack.gap-2
                label.form-label.fw-bold(for="robotExplain") 설명
                textarea#robotExplain.form-control(rows="5")

block modal
    +saveCheckModal("/src/view/sysMngr/robot/robot.pug")
