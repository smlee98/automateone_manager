mixin themeToggle(option)
    .dropdown(class=option)
        a#bd-theme.btn.btn-light.dropdown-toggle.text-primary(
            href="#",
            data-bs-toggle="dropdown",
            aria-expanded="false",
            data-bs-display="static"
        )
            span#bd-icon
                .hstack.gap-2
                    i.bi.bi-sun-fill
        ul.dropdown-menu.dropdown-menu-end.bd-theme-toggles
            each theme in [{"value": "light", "text": "라이트 모드", "icon" : "bi-sun-fill"}, {"value": "dark", "text": "다크 모드", "icon" : "bi-moon-fill"}, {"value": "auto", "text": "자동", "icon" : "bi-circle-half"}]
                li
                    button.dropdown-item(
                        type="button",
                        data-theme-value=theme.value
                    )
                        .hstack.gap-2
                            i.bi(class=theme.icon)
                            span= theme.text

header.border-bottom.fixed-top
    nav.navbar.bg-primary.text-light.ps-4.pe-5
        .d-flex.justify-content-between.align-items-center.flex-grow-1
            a.navbar-brand.hstack.gap-1(href="/src/view/index.pug")
                img#logo(src="/src/assets/images/logo.png", alt="logo")
                span.badge.border.border-white.fw-normal v4.0.0-beta1
            .hstack.gap-3
                a.btn.btn-light.text-primary(
                    href="/src/view/sysMngr/project/project.pug"
                )
                    .hstack.gap-2
                        i.bi.bi-house
                        span 홈
                .dropdown
                    button#languageButton.btn.btn-light.dropdown-toggle.text-primary(
                        type="button",
                        data-bs-toggle="dropdown",
                        aria-expanded="false"
                    )
                        .hstack.gap-2.w-100
                            i.bi.bi-translate
                            span#language 한국어
                    ul#languageChoice.dropdown-menu(aria-labelledby="lang-btn")
                        li
                            a.dropdown-item 한국어
                        li
                            a.dropdown-item English
                        li
                            a.dropdown-item 日本語
                +themeToggle
